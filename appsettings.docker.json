{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "McpServer": {
    "Name": "poe2-build-optimizer",
    "Version": "1.0.0"
  },
  "Database": {
    "ConnectionString": "Data Source=/app/data/poe2_optimizer.db"
  },
  "Cache": {
    "MemoryCacheExpirationMinutes": 30,
    "SqliteCacheExpirationMinutes": 1440
  },
  "RateLimit": {
    "PoeApiRequestsPerSecond": 10,
    "PoeNinjaRequestsPerSecond": 5,
    "TradeApiRequestsPerSecond": 5
  },
  "AI": {
    "ApiKey": null,
    "Model": "claude-3-5-sonnet-20241022",
    "MaxTokens": 1024,
    "Temperature": 0.7,
    "RequestTimeoutSeconds": 30
  }
}
