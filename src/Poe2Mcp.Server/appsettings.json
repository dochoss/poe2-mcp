{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Poe2Mcp": "Debug"
    }
  },
  "McpServer": {
    "Name": "poe2-build-optimizer",
    "Version": "1.0.0",
    "Description": "Path of Exile 2 Build Optimizer MCP Server"
  },
  "Database": {
    "ConnectionString": "Data Source=data/poe2_optimizer.db",
    "EnableSensitiveDataLogging": false
  },
  "Cache": {
    "DefaultExpirationMinutes": 60,
    "CharacterCacheMinutes": 5,
    "ApiCacheMinutes": 30
  },
  "RateLimiting": {
    "OfficialApiRequestsPerMinute": 10,
    "Poe2DbRequestsPerMinute": 30
  },
  "Features": {
    "EnableAiInsights": true,
    "EnableTradeIntegration": true,
    "EnablePobExport": true
  },
  "PoeApi": {
    "BaseUrl": "https://api.pathofexile.com/",
    "CacheTtlSeconds": 300,
    "RequestTimeoutSeconds": 30,
    "ClientId": null,
    "ClientSecret": null
  },
  "PoeNinja": {
    "BaseUrl": "https://poe.ninja",
    "CacheTtlSeconds": 3600,
    "RequestTimeoutSeconds": 30
  },
  "TradeApi": {
    "BaseUrl": "https://api.pathofexile.com",
    "RequestTimeoutSeconds": 30,
    "RequestDelayMilliseconds": 500,
    "PoeSessionId": null
  },
  "CharacterFetcher": {
    "MaxLadderSearchDepth": 1000,
    "LadderPageSize": 200
  },
  "AI": {
    "ApiKey": null,
    "Endpoint": null,
    "Model": "gpt-oss-120b",
    "MaxTokens": 0,
    "Temperature": 0.7,
    "RequestTimeoutSeconds": 30
  }
}
